<div class="card card_option card_margin border border-success mx-auto">
    <div class="card-header bg-success text-white border border-success">
        Upload CSV file
    </div>
    <% if notice %>
      <div class="alert alert-danger">
          <%= notice %>
      </div>
    <% end %>
    <div class="card-body p-5">
        <%= form_tag import_posts_path, multipart: true, :html => { :style => 'width: 80%;' } do %>
            <div class="form-group row">
                <div class="col-sm-3 col-form-label text-end"> CSV file </div>
                <div class="col-sm-7"><%= file_field_tag :file, class: "form-control" %></div>
            </div><br/>
            <div class="form-group row mb-0">
                <div class="col-sm-3 col-form-label text-end"> </div>
                <div class="col-sm-7">
                    <%= submit_tag "Upload", class: 'btn btn-success' %>
                    <%= button_tag "Clear", class: 'btn btn-secondary', type: :reset %>
                </div>
            </div>
        <% end %>
    </div>
</div>